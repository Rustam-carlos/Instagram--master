@model InstagramLight.Models.Post

@{
    ViewBag.Title = "Публикация поста";
}

<h2>Создание поста</h2>
@using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label class="control-label col-md-2">Загрузить файл</label>
        <input type="file" name="upload" accept="image/*, image/jpeg" class="form-control-file" />
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Добавить описание</label>
        <textarea name="text" cols="100" rows="20" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Опубликовать" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к публикациям", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}